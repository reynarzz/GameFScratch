<Window x:Class="GameAssetsEditor.BuildConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Build Configuration"
        Width="450"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <DockPanel Margin="15">
        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="OK" Width="100" Margin="10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="100" Margin="10,0" Click="CancelButton_Click"/>
        </StackPanel>

        <!-- ListView grid -->
        <ListView Name="FileOptionsListView" BorderBrush="Gray" BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Type" Width="200" DisplayMemberBinding="{Binding FileType}" />
                    <GridViewColumn Header="Compress" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Compress}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Encrypt" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Encrypt}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
